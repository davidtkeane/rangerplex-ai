{
    "name": "ranger-chat-lite",
    "productName": "RangerChat Lite",
    "description": "Lightweight chat client for the RangerPlex blockchain network",
    "private": true,
    "version": "1.7.6",
    "author": {
        "name": "David Keane",
        "email": "davidtkeane@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/davidtkeane/rangerplex-ai"
    },
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:win": "tsc && vite build && electron-builder --win",
        "build:mac": "tsc && vite build && electron-builder --mac",
        "build:linux": "tsc && vite build && electron-builder --linux",
        "build:all": "tsc && vite build && electron-builder --win --mac --linux",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ws": "^8.16.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^39.2.5",
        "electron-builder": "^24.13.3",
        "typescript": "^5.2.2",
        "vite": "^7.2.6",
        "vite-plugin-electron": "^0.28.4",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.rangerplex.chat-lite",
        "productName": "RangerChat Lite",
        "copyright": "Copyright Â© 2025 David Keane",
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico",
            "artifactName": "${productName}-${version}-win-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "RangerChat Lite"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon.icns",
            "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
            "category": "public.app-category.social-networking"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icons",
            "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
            "category": "Network;Chat"
        },
        "publish": {
            "provider": "github",
            "owner": "davidtkeane",
            "repo": "rangerplex-ai",
            "releaseType": "release"
        }
    }
}
